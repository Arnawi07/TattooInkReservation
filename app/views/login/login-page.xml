<Page class="page" loaded="onLoaded" actionBarHidden="true" xmlns:CheckBox="nativescript-checkbox">
    <FlexboxLayout class="loginLayout">
        <StackLayout class="formLayout">
            <Image class="logo" src="res://logo_tatto_shop" />

            <StackLayout class="input-field" visibility="{{ showTxtField ? 'collapse' : 'visible' }}">
                <TextField id="displayNameXML" class="input" text="{{ displayName }}" hint="Nombre y apellido"/>
                <Label class="hr-light"/>
            </StackLayout>

            <StackLayout class="input-field">
                <TextField id="emailXML" class="input" text="{{ email }}" hint="Correo electrónico" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
                <Label class="hr-light"/>
            </StackLayout>

            <StackLayout class="input-field">
                <TextField id="passwordXML" class="input" text="{{ password }}" hint="Contraseña" secure="true" />
                <Label class="hr-light" />
            </StackLayout>

            <StackLayout visibility="{{ showTxtField ? 'visible' : 'collapse' }}">
                <Label id="recoverPassword" class="underlinesWords" text="¿ Has olvidado la contraseña ?" tap="resetPassword"/>
            </StackLayout>

            <StackLayout class="input-field" visibility="{{ showTxtField ? 'collapse' : 'visible' }}">
                <TextField id="passwordConfirmationXML" class="input" hint="Confirmar contraseña" secure="true" />
                <Label class="hr-light" />
            </StackLayout>

            <StackLayout class="input-field" visibility="{{ showTxtField ? 'collapse' : 'visible' }}" orientation="horizontal">
                <CheckBox:CheckBox id="checkTerms" class="check" text="He leído y acepto los" checked="false"/>
                <Label id="termsAndConditions" class="underlinesWords" text="términos y condiciones de uso" tap="openModalTermsAndConditions"/>
            </StackLayout>


            <Button class="btn btn-primary" text="{{ isLoggingIn ? 'Inicia sesión' : 'Regístrate' }}" tap="submit" />
            <Button text="{{ isLoggingIn ? 'Regístrate' : 'Volver a inicio de sesión' }}" tap="toggleDisplay" />
        </StackLayout>
    </FlexboxLayout>
</Page>