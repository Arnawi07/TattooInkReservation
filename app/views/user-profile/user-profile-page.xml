<Page class="page" loaded="onLoaded" actionBarHidden="true">
    <StackLayout class="profileLayout">
        <Image class="imageUser" src="~/resources/img/userProfileIcon.png"/>

        <StackLayout class="input-edit" orientation="horizontal">
            <Label class="underlinesWords" text="editar" tap="editingPhoto"/>
            <Image class="iconEdit" src="res://edit_icon" tap="editingPhoto"/>
        </StackLayout>

        <StackLayout class="input-field">
            <GridLayout columns="auto,100" rows="auto,auto">
                <Label col="0" row="0" id="emailXML" text="{{ 'Correo: ' + email }}"/>
                <Image col="1" row="0" class="iconEdit" src="res://edit_icon" tap="changeEmail"/>
            </GridLayout>
        </StackLayout>

        <StackLayout class="input-field">
            <GridLayout columns="auto,100" rows="auto,auto">
                <Label col="0" row="0" id="passwordXML" text="{{ 'ContraseÃ±a: ' + password + '                     '}}" secure="true"/>
                <Image col="1" row="0" class="iconEdit" src="res://edit_icon" tap="changePassword"/>
            </GridLayout>
        </StackLayout>
    </StackLayout>
</Page>