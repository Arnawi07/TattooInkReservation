<Page loaded="onLoaded" actionBarHidden="true">
    <FlexboxLayout class="loginLayout">
        <StackLayout class="formLayout">
            <Image id="imageUser" src="{{ imagePath }}"/>
            <Image id="iconEdit" src="res://edit_icon" tap="editingPhoto"/>

            <StackLayout class="input-field">
                <GridLayout columns="auto,100" rows="auto,auto">
                    <Label col="0" row="0" id="emailXML" text="{{ email }}"/>
                    <Image col="1" row="0" id="iconEdit" src="res://edit_icon" tap="changeEmail"/>
                </GridLayout>
            </StackLayout>

            <StackLayout class="input-field">
                <GridLayout columns="auto,100" rows="auto,auto">
                    <Label id="passwordXML" text="{{ password }}" secure="true"/>
                    <Image col="1" row="0" id="iconEdit" src="res://edit_icon" tap="changePassword"/>
                </GridLayout>
            </StackLayout>
        </StackLayout>
    </FlexboxLayout>
</Page>