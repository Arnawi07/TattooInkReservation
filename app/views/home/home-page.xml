<Page actionBarHidden="true" loaded="loaded" xmlns:Card="nativescript-cardview" xmlns:lv="nativescript-ui-listview">
    <Page.actionBar>
        <ActionBar class="action-bar" title="Tattoo Ink Reservation"></ActionBar>
    </Page.actionBar>
    <ScrollView>
        <StackLayout>
            <Repeater items="{{ tattooPhotosList }}">
                <Repeater.itemTemplate>
                    <Card:CardView margin="10" elevation="35" shadowColor="#FE00FC" shadowOpacity="2" tap="">
                        <GridLayout rows="200, auto, auto" columns="auto, auto, *">
                            <Image src="{{ photoUrl }}" stretch="aspectFill"  row="0" colSpan="3"/>
                            <Label text="{{ title }}" class="info" textWrap="true" row="1" colSpan="3"/>
                        </GridLayout>
                    </Card:CardView>
                </Repeater.itemTemplate>
            </Repeater>
           <ActivityIndicator busy="{{ isLoading }}" row="1" horizontalAlignment="center" verticalAlignment="center"/>
        </StackLayout>
    </ScrollView>
</Page>