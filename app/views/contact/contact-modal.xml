<Page class="page" shownModally="onShownModally" navigatingFrom="onNavigatedFrom">
    <StackLayout>
        <GridLayout class="action-bar action-bar-modal" columns="auto,auto" rows="auto,auto">
            <Image col="0" row="0" src="res://close" tap="onCloseModal"/>
            <Label class="title-modal" col="1" row="0" text="Contáctanos"/>
        </GridLayout>

        <StackLayout class="formLayout">
            <StackLayout class="input" orientation="horizontal">
                <Label class="imp" text="Nombre: "/>
                <Label id="nameShopXML" text="{{ contact.nameShop }}"/>
            </StackLayout>
            <StackLayout class="input" orientation="horizontal">
                <Label class="imp" text="Número de telefono: "/>
                <Label id="telephoneShopXML" text="{{ contact.telephoneShop }}"/>
            </StackLayout>
            <StackLayout class="input" orientation="horizontal">
                <Label class="imp" text="Correo electrónico: "/>
                <Label id="emailShopXML" text="{{ contact.emailShop }}"/>
            </StackLayout>
            <StackLayout class="input" orientation="horizontal">
                <Label class="imp" text="Dirección: "/>
                <Label id="addressShopXML" text="{{ contact.addressShop }}"/>                
            </StackLayout>
            <StackLayout class="input" orientation="horizontal">
                <Image class="img" src="~/resources/img/tattooShop.jpg"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</Page>