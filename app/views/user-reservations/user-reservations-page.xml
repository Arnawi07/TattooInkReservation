<Page class="page" loaded="onLoaded" actionBarHidden="true" xmlns:lv="nativescript-ui-listview">
    <GridLayout rows="auto, *">
        <lv:RadListView items="{{ myReservationsList }}" row="0" itemSwipeProgressStarted="onSwipeCellStarted" swipeActions="true">
            <lv:RadListView.itemTemplate>
                <GridLayout class="">
                    <Label class="p-15" text="{{ startDate + ' (tatuador: ' + workerShop + ')' }}"/>
                </GridLayout>
            </lv:RadListView.itemTemplate>

            <lv:RadListView.itemSwipeTemplate>
                <GridLayout columns="*,auto" backgroundColor="red">
                    <StackLayout id="delete-view" col="1" tap="deleteReserve" class="delete-view">
                        <Image src="res://close"/>
                    </StackLayout>
                </GridLayout>
            </lv:RadListView.itemSwipeTemplate>
        </lv:RadListView>
    </GridLayout>
</Page>