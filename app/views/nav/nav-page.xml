<Page loaded="onLoaded" xmlns="http://www.nativescript.org/tns.xsd">
	<Page.actionBar>
		<ActionBar class="action-bar" title="{{ titleActionBar }}">
			<ActionItem ios.systemIcon="16" ios.position="right" tap="openModalContact" text="Contactanos" android.position="popup"></ActionItem>
			<ActionItem id="logOut" tap="signOut" ios.systemIcon="16" ios.position="right" text="Cerrar SesiÃ³n" android.position="popup"></ActionItem>
		</ActionBar>
	</Page.actionBar>
	<GridLayout rows="*" columns="*">
		<TabView class="tab-view" androidSwipeEnabled="false" androidOffscreenTabLimit="0" loaded="onLoaded" selectedIndex="{{ tabSelectedIndex }}" selectedIndexChanged="onSelectedIndexChanged">
			<TabViewItem title="" iconSource="~/resources/home_icon.png">
				<Frame defaultPage="views/home/home-page"/>
			</TabViewItem>
			<TabViewItem title="" iconSource="~/resources/calendar_icon.png">
				<Frame defaultPage="views/reservations/reservations-page"/>
			</TabViewItem>
			<TabViewItem title="" iconSource="~/resources/user_reservation.png">
				<Frame defaultPage="views/user-reservations/user-reservations-page"/>
			</TabViewItem>
			<TabViewItem title="" iconSource="~/resources/img/user_profile_icon.png">
				<Frame defaultPage="views/user-profile/user-profile-page"/>
			</TabViewItem>
		</TabView>
	</GridLayout>
</Page>