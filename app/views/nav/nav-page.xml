			<TabViewItem title="Reservas" iconSource="~/resources/calendar_icon.png">
				<StackLayout>
				</StackLayout>
			</TabViewItem>
			<TabViewItem title="Opciones" iconSource="~/resources/settings_icon.png">
				<StackLayout>					
				</StackLayout>
			</TabViewItem>
		</TabView>
	</GridLayout>
