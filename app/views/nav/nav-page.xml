<Page loaded="onLoaded" xmlns="http://www.nativescript.org/tns.xsd">
	<Page.actionBar>
    <ActionBar class="action-bar" title="Tattoo Ink Reservation">
			<ActionItem ios.systemIcon="16" ios.position="right" text="Configuración" android.position="popup" icon="~/resources/settings_icon.png"></ActionItem>
			<ActionItem tap="signOut" ios.systemIcon="16" ios.position="right" text="Cerrar Sesión" android.position="popup"></ActionItem>	
		</ActionBar>
  </Page.actionBar>
	<GridLayout rows="*" columns="*">
		<TabView class="tab-view" loaded="onLoaded" selectedIndex="{{tabSelectedIndex}}" selectedIndexChanged="onSelectedIndexChanged" androidTabsPosition="bottom">
			<TabViewItem title="Inicio" iconSource="~/resources/home_icon.png">
				<Frame id="firstFrame" defaultPage="views/home/home-page"/>
			</TabViewItem>
			<TabViewItem title="Reservas" iconSource="~/resources/calendar_icon.png">
				<StackLayout></StackLayout>
			</TabViewItem>
			<TabViewItem title="Mi Cuenta" iconSource="~/resources/img/user_profile_icon.png">
				<StackLayout></StackLayout>
			</TabViewItem>
		</TabView>
	</GridLayout>
</Page>