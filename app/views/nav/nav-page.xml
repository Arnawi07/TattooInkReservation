<Page loaded="onLoaded" xmlns="http://www.nativescript.org/tns.xsd">
	<Page.actionBar>
        <ActionBar class="action-bar" title="Tattoo Ink Reservation"></ActionBar>
    </Page.actionBar>
	<GridLayout rows="*" columns="*">
		<TabView selectedIndex="{{tabSelectedIndex}}" selectedIndexChanged="onSelectedIndexChanged" androidTabsPosition="bottom">
			<TabViewItem title="Profile">
				<Frame id="firstFrame" defaultPage="views/home/home-page"/>
			</TabViewItem>
			<TabViewItem title="Stats">
				<Label text="hola 1" class="h2 m-t-16 text-center" textWrap="true" />	
			</TabViewItem>
			<TabViewItem title="Settings">
				<StackLayout>
					<Label text="hola 2" class="h2 m-t-16 text-center" textWrap="true" />					
				</StackLayout>
			</TabViewItem>
		</TabView>
	</GridLayout>
</Page>